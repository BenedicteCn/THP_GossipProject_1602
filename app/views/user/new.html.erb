<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Fonts -->
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,600" rel="stylesheet" type="text/css">



    <link rel="icon" href="Favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

    <title>Laravel</title>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light navbar-laravel">
    <div class="container">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/sessions/new">Se connecter</a>
            </li>
        </ul>

    </div>
    </div>
</nav>

<main class="my-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">Créer un compte</div>
                        <div class="card-body">
                            <%= form_tag url_for(action: 'create'), method: "post" do %>

                                <div class="form-group row">
                                    <%= label_tag 'Nom' %>
                                    <div class="col-md-6">
                                      <p style = "width: 200px"><%= text_field_tag 'last_name' %></p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                  <%= label_tag 'Prénom' %>
                                  <div class="col-md-6">
                                  <p style = "width: 200px"><%= text_field_tag 'first_name' %></p>
                                  </div>
                                </div>

                                <div class="form-group row">
                                  <%= label_tag 'Description' %>
                                  <div class="col-md-6">
                                  <p style = "width: 200px"><%= text_area_tag 'description' %></p>
                                  </div>
                                </div>

                                <div class="form-group row">
                                    <%= label_tag 'Âge' %>
                                    <div class="col-md-6">
                                    <p style = "width: 200px"><%= text_field_tag 'age' %></p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <%= label_tag 'Ville' %>
                                    <div class="col-md-6">
                                    <p style = "width: 200px"><%= select_tag(:city_id, options_from_collection_for_select(City.all, "id", "name"))%></p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <%= label_tag 'Email' %>
                                    <div class="col-md-6">
                                    <p style = "width: 200px"><%= text_field_tag 'email' %></p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <%= label_tag 'Ton mot de passe' %>
                                    <div class="col-md-6">
                                    <p style = "width: 200px"><%= text_field_tag 'password' %></p>
                                    </div>
                                </div>

                                    <div class="col-md-6 offset-md-4">
                                      <p style = "width: 200px"><%= submit_tag "Inscription" %></p>
                                    </div>
                                 <% end %>
                                </div>
                            </form>
                        </div>
                    </div>
            </div>
        </div>
    </div>

</main>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>
</html>
